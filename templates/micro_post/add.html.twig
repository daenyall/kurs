{% extends 'base.html.twig' %}
{% block title %} Create New Post{% endblock %}

    {% block body %}
      {{ form_start(form)}}
      <div class="flex flex-col mx-auto w-1/2 items-center border border-gray-200 shadow-sm h-120">
      <div> {{form_errors(form)}} </div>

      <div> ``
        {{ form_label(form.title)}}
      </div>
      <div> 
        {{ form_widget(form.title, {'attr': {'class': 'bg-gray-100 rounded-md border border-gray-50 shadow-sm w-90 m-5'} } ) }}
      </div>
      <div> 
        {{ form_label(form.text )}}
      </div>
      <div> 
        {{ form_widget(form.text , {'attr': {'class': 'bg-gray-100 rounded-md border border-gray-50 shadow-sm w-90 h-60'} })}}
      </div>
  

      <div>
        <button type="submit" id="submit" class=" w-24 m-5 bg-blue-100 rounded-full- shadow-sm border border-gray-300 hover:bg-blue-200" >Submit</button>
        </div> 
      </div>
        {{ form_end(form)}}
    {% endblock %}
    